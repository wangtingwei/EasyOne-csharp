<?xml version="1.0"?>
<root>
  <LabelType>列表标签</LabelType>
  <LabelIntro>
  </LabelIntro>
  <OutType>sin</OutType>
  <LabelDataType>sql_sysquery</LabelDataType>
  <attributes>
    <name>generalid</name>
    <default>1</default>
    <intro>内容ID</intro>
  </attributes>
  <LabelSqlString>select NodeID from PE_CommonModel where GeneralID=@generalid</LabelSqlString>
  <LabelTemplate><![CDATA[<?xml version="1.0" encoding="utf-8"?>
<xsl:transform version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform" xmlns:pe="labelproc" exclude-result-prefixes="pe">
<xsl:output method="html" />
<xsl:param name="generalid"/>
<xsl:template match="/">

<xsl:choose>
    <xsl:when test="pe:EnableComment(NewDataSet/Table/NodeID)='true'">
        <xsl:choose>
            <xsl:when test="pe:EnableTouristsComment(NewDataSet/Table/NodeID)='true'">
                {PE.Label id="显示发表评论用户信息" generalid="<xsl:value-of select="$generalid"/>" /}
            </xsl:when>
            <xsl:otherwise>
                <xsl:choose>
                    <xsl:when test="pe:IsLogined()='true'">
                        {PE.Label id="显示发表评论用户信息" generalid="<xsl:value-of select="$generalid"/>" /}
                    </xsl:when>
                    <xsl:otherwise>
                        该信息所属栏目不允许游客发表评论！
                    </xsl:otherwise>
                </xsl:choose>
            </xsl:otherwise>
        </xsl:choose>
    </xsl:when>
    <xsl:otherwise>
        <xsl:choose>
            <xsl:when test="pe:UserPurview('commentcheck')='true'">
                {PE.Label id="显示发表评论用户信息" generalid="<xsl:value-of select="$generalid"/>" /}
            </xsl:when>
            <xsl:otherwise>
                该信息所属栏目不允许发表评论！
            </xsl:otherwise>
        </xsl:choose>
    </xsl:otherwise>
</xsl:choose>

</xsl:template>
</xsl:transform>]]></LabelTemplate>
</root>