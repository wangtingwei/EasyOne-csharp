  <LabelSqlString>SELECT NodeID,NodeName,ShowOnPath FROM PE_Nodes WHERE NodeID IN(@parentpath)  order by RootID, OrderID ASC</LabelSqlString>
  <LabelTemplate><![CDATA[<?xml version="1.0" encoding="utf-8"?>
