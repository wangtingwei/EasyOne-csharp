  <OutType>sin</OutType>
  <CacheTime>0</CacheTime>
  <LabelDataType>sql_sysquery</LabelDataType>
  <attributes>
    <name>parentpath</name>
    <default>0</default>
    <intro>栏目父路径</intro>
